<?xml version="1.0"?>
<!-- 
nolon_bot Xacro Robot Description
Author: Aayush Rath | Date: 12/08/2025

Defines the modular robot description for the nolon_bot platform using Xacro macros.  
Includes base structure, sensors, and extensible components for simulation and visualization in ROS 2.

Features:
- Includes mobile base, robotic arm and the containment with configurable mesh paths for Gazebo or RViz
- Sensor integration (e.g., lidar) with fixed joint placement
- Modular structure for easy extension with additional components or controls
- Organized file inclusion for maintainable robot architecture

Usage:
- Include in launch or simulation files for nolon_bot visualization and control
- Extend by adding new sensors, actuators, or control macros
- Adjust joint origins and mesh paths for accurate physical representation
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="nolon_bot">
    <xacro:arg name="use_gazebo" default="true"/>
    <xacro:property name="use_lidar" value="false"/>
    <xacro:property name="use_camera" value="true"/>

    <xacro:include filename="mobile_base/mobile_base.urdf.xacro"/>
    <xacro:include filename="mobile_base/mobile_base.control.xacro"/>
    <xacro:include filename="containment/containment_box.urdf.xacro"/>
    <xacro:include filename="robotic_arm/robotic_arm.urdf.xacro"/>
    <xacro:include filename="robotic_arm/robotic_arm.control.xacro"/>

    <xacro:if value="${use_lidar}">
        <xacro:include filename="sensors/lidar.sensor.xacro"/>
        <joint name="lidar_joint" type="fixed">
            <parent link="base_link"/>
            <child link="lidar_link"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </joint>
    </xacro:if>

    <xacro:if value="${use_camera}">
        <xacro:include filename="sensors/camera.sensor.xacro"/>
        <joint name="camera_joint" type="fixed">
            <parent link="base_link"/>
            <child link="camera_link"/>
            <origin xyz="0.25 0 1.05" rpy="0 0 0"/>
        </joint>
    </xacro:if>

    <joint name="containment_to_mobile_base" type="fixed">
        <parent link="base_link"/>
        <child link="containment_box"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    
    <joint name="robotic_arm_to_containment" type="fixed"> 
        <parent link="containment_box"/>
        <child link="link_base"/>
        <origin xyz="-0.25 0.1 0.8" rpy="0 0 3.14159"/>
    </joint>

    <gazebo>
        <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
            <parameters>$(find nolon_bot_description)/config/nolon_bot_control.yaml</parameters>
            <controller_manager_node_name>controller_manager</controller_manager_node_name>
        </plugin>
        <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>
    </gazebo>
</robot>